@model string

@{
    const string imgHeight = "200px";
    string imgWidth;
}
           
@foreach (var i in Model.Split(','))
{
    string imgSource;
    var upper = i.Trim().ToUpper();
    var isBlock = false;
    int blockNumber;
    if (int.TryParse(upper, out blockNumber))
    {
        isBlock = true;
    }
    if (isBlock)
    {
        imgSource = Url.Content("~/Content/Images/blocks/" + upper + ".png");
    }
    else
    {
        imgSource = Url.Content("~/Content/Images/randoms/random" + upper + ".jpg");
    }
    <img src="@imgSource" alt="@upper" height="@imgHeight" />
}
