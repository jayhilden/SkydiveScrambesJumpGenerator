@model IEnumerable<Data.Sql.Models.Round>

@{
    ViewBag.Title = "Index";
    const string imageSize = "200px";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoundNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Formations)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Formations)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoundNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Formations)
        </td>
        <td>
            @foreach (var i in item.FormationsSplit)
            {
                string imgSource;
                var upper = i.Trim().ToUpper();
                bool isBlock = false;
                int blockNumber;
                if (int.TryParse(upper, out blockNumber))
                {
                    isBlock = true;
                }
                if (isBlock)
                {
                    throw new NotImplementedException("TODO: get block images");
                }
                else
                {
                    imgSource = @Url.Content("~/Content/Images/randoms/random" + upper + ".jpg");
                }
                <img src="@imgSource" alt="@upper" width="@imageSize" height="@imageSize"/>
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RoundID }) |
            @Html.ActionLink("Details", "Details", new { id=item.RoundID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RoundID })
        </td>
    </tr>
}

</table>
